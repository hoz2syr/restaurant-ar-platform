# Staging Environment
NODE_ENV=staging

# Database
DATABASE_URL="postgresql://postgres:postgres@staging-db:5432/restaurant_ar?schema=public"

# Redis (optional)
REDIS_URL="redis://:password@staging-redis:6379"

# JWT
JWT_SECRET="replace-with-strong-secret"
JWT_EXPIRES_IN="7d"

# API
API_PORT=3001
CORS_ORIGIN="https://staging.your-domain.com"
THROTTLE_TTL=60
THROTTLE_LIMIT=120

# Web App
NEXT_PUBLIC_API_URL="https://staging-api.your-domain.com/api"
NEXT_PUBLIC_WEB_URL="https://staging.your-domain.com"

# Admin App
NEXT_PUBLIC_ADMIN_URL="https://staging-admin.your-domain.com"
