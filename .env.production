# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# ⚠️ IMPORTANT: Never commit this file with real values!
# Copy this to .env and fill in your production values.

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/restaurant_ar?schema=public&sslmode=require"

# ============================================
# REDIS (Optional - for caching/sessions)
# ============================================
REDIS_URL="redis://:PASSWORD@HOST:6379"

# ============================================
# SECURITY - JWT
# ============================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET="GENERATE_A_SECURE_64_CHAR_SECRET_HERE"
JWT_EXPIRES_IN="1d"

# ============================================
# API SERVER
# ============================================
NODE_ENV="production"
API_PORT=3001
API_URL="https://api.yourdomain.com"

# CORS - Comma-separated allowed origins
CORS_ORIGIN="https://yourdomain.com,https://admin.yourdomain.com"

# ============================================
# WEB APP (Customer)
# ============================================
NEXT_PUBLIC_API_URL="https://api.yourdomain.com/api"
NEXT_PUBLIC_WEB_URL="https://yourdomain.com"

# ============================================
# ADMIN APP
# ============================================
NEXT_PUBLIC_ADMIN_URL="https://admin.yourdomain.com"

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# For cloud storage (recommended for production)
# AWS_S3_BUCKET=""
# AWS_S3_REGION=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# ============================================
# AR CONFIGURATION
# ============================================
AR_MODEL_BASE_URL="https://cdn.yourdomain.com/ar-models"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AR_MENU=true
ENABLE_ONLINE_ORDERING=true
ENABLE_RESERVATIONS=false
ENABLE_PROMOTIONS=false

# ============================================
# LOCALIZATION
# ============================================
DEFAULT_LANGUAGE="ar"
SUPPORTED_LANGUAGES="ar,en"

# ============================================
# PAYMENT (Configure when ready)
# ============================================
PAYMENT_PROVIDER=""
PAYMENT_PUBLIC_KEY=""
PAYMENT_SECRET_KEY=""

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL="info"
# SENTRY_DSN=""

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
