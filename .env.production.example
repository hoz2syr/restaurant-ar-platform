# Production Environment
NODE_ENV=production

# Database
DATABASE_URL="postgresql://postgres:postgres@db-host:5432/restaurant_ar?schema=public"

# Redis (optional)
REDIS_URL="redis://:password@redis-host:6379"

# JWT
JWT_SECRET="replace-with-strong-secret"
JWT_EXPIRES_IN="1d"

# API
API_PORT=3001
CORS_ORIGIN="https://your-domain.com"
THROTTLE_TTL=60
THROTTLE_LIMIT=120

# Web App
NEXT_PUBLIC_API_URL="https://api.your-domain.com/api"
NEXT_PUBLIC_WEB_URL="https://your-domain.com"

# Admin App
NEXT_PUBLIC_ADMIN_URL="https://admin.your-domain.com"
