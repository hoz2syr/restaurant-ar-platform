{
  "name": "restaurant-ar-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant AR Platform - Complete monorepo solution for restaurant management with AR menu",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:prod": "NODE_ENV=production turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @restaurant/database generate",
    "db:push": "pnpm --filter @restaurant/database push",
    "db:migrate": "pnpm --filter @restaurant/database migrate",
    "db:migrate:deploy": "pnpm --filter @restaurant/database migrate:deploy",
    "db:seed": "pnpm --filter @restaurant/database seed",
    "db:studio": "pnpm --filter @restaurant/database studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/jwt": "^11.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3"
  }
}
