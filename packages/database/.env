# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/restaurant_ar?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# API
API_URL="http://localhost:3001"
API_PORT=3001

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WEB_URL="http://localhost:3000"

# Admin App
NEXT_PUBLIC_ADMIN_URL="http://localhost:3002"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# AR Configuration
AR_MODEL_BASE_URL="https://cdn.example.com/ar-models"

# Feature Flags
ENABLE_AR_MENU=true
ENABLE_ONLINE_ORDERING=true
ENABLE_RESERVATIONS=true
ENABLE_PROMOTIONS=true

# Localization
DEFAULT_LANGUAGE="ar"
SUPPORTED_LANGUAGES="ar,en"

# Payment (Example - Configure based on your provider)
PAYMENT_PROVIDER="stripe"
PAYMENT_PUBLIC_KEY=""
PAYMENT_SECRET_KEY=""
